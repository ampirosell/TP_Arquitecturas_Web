{
	"info": {
		"_postman_id": "integrador3-rest-api",
		"name": "Integrador3 - REST API",
		"description": "Colección de endpoints para el sistema de estudiantes y carreras - Solo endpoints requeridos",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "a) Dar de alta un estudiante",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"dni\": 12345678,\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"edad\": 25,\n  \"genero\": \"M\",\n  \"ciudadDeResidencia\": \"Buenos Aires\",\n  \"numeroLU\": \"LU123456\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/estudiantes",
					"host": ["{{baseUrl}}"],
					"path": ["estudiantes"]
				}
			}
		},
		{
			"name": "b) Matricular estudiante en carrera",
			"request": {
				"method": "POST",
				"url": {
					"raw": "{{baseUrl}}/carreras/1/matricular/12345678?fechaInscripcion=2024-01-15",
					"host": ["{{baseUrl}}"],
					"path": ["carreras", "1", "matricular", "12345678"],
					"query": [
						{
							"key": "fechaInscripcion",
							"value": "2024-01-15"
						}
					]
				}
			}
		},
		{
			"name": "c) Recuperar todos los estudiantes",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/estudiantes",
					"host": ["{{baseUrl}}"],
					"path": ["estudiantes"]
				}
			}
		},
		{
			"name": "d) Recuperar estudiante por número LU",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/estudiantes/libreta/LU123456",
					"host": ["{{baseUrl}}"],
					"path": ["estudiantes", "libreta", "LU123456"]
				}
			}
		},
		{
			"name": "e) Recuperar estudiantes por género",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/estudiantes/genero/M",
					"host": ["{{baseUrl}}"],
					"path": ["estudiantes", "genero", "M"]
				}
			}
		},
		{
			"name": "f) Recuperar carreras con estudiantes ordenadas",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/carreras/con-estudiantes",
					"host": ["{{baseUrl}}"],
					"path": ["carreras", "con-estudiantes"]
				}
			}
		},
		{
			"name": "g) Recuperar estudiantes por carrera y ciudad",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/estudiantes/carrera/Ingeniería en Sistemas/ciudad/Buenos Aires",
					"host": ["{{baseUrl}}"],
					"path": ["estudiantes", "carrera", "Ingeniería en Sistemas", "ciudad", "Buenos Aires"]
				}
			}
		},
		{
			"name": "h) Reporte de carreras por año",
			"request": {
				"method": "GET",
				"url": {
					"raw": "{{baseUrl}}/reportes/carreras-por-ano",
					"host": ["{{baseUrl}}"],
					"path": ["reportes", "carreras-por-ano"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081/api"
		}
	]
}